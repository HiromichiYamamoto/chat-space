.information
  .pop チャットグループが作成されました。
.main-left
  .main-left__user
    .main-left__user-content
      .main-left__user-content-name user
      .main-left__user-content-newgroup
        = link_to root_path do
          = fa_icon 'pencil-square-o', class: 'icon'
      .main-left__user-content-edit
        = link_to root_path do
          = fa_icon 'cog', class: 'icon'
  .main-left__group
    .main-left__group-lists
      .main-left__group-lists-list
        .main-left__group-lists-list-name group
        .main-left__group-lists-list-message zzz
.main
  .main__header
    .main__header-group.clearfix
      .main__header-group-name グループネーム
      .main__header-group-edit edit
    .main__header-member member
  .main__body
    .main__body-message
      .main__body-message-lists.clearfix
        .main__body-message-lists-name yamamoto
        .main__body-message-lists-time 2017/10/08 22:44:32
        .main__body--message-lists-body こんにちわ

  .main__footer
    %form
      %input.text{placeholder: 'type a message', type: 'text'}/
      .main__footer-mask
        %label{ for: "file_photo"}
          %i.fa.fa-picture-o{ aria: { hidden: "true"}}
          %input{ type: "file", id: "file_photo", style: "display:none;"}
      %input.button{ type: "submit", name: "commit", value: "Send" }



