.main-left
  .main-left__user
    .main-left__user-content
      .main-left__user-content-name user
      .main-left__user-content-newgroup
        = link_to new_group_path do
          = fa_icon 'pencil-square-o', class: 'icon'
      .main-left__user-content-edit
        = link_to edit_user_registration_path do
          = fa_icon 'cog', class: 'icon'
  .main-left__group
    .main-left__group-lists
      .main-left__group-lists-list
        - if user_signed_in?
          = render 'layouts/index', groups: @groups
.main
  .main__header
    .main__header-group.clearfix
      .main__header-group-name グループネーム
      .main__header-group-edit edit
    .main__header-member member
  .main__body
    .main__body-message
      .main__body-message-list
        .main__body-message-list-upper
          .main__body-message-list-upper-name yamamoto
          .main__body-message-list-upper-time 2017/10/08 22:44:32
        .main__body-message-list-lower
          .main__body--message-list-lower-body こんにちわ

  .main__footer
    = form_for [@group, @message] do |f|
      = f.text_field :body, placeholder: 'type a message', class: 'text_field'
      .main__footer-mask
        %label
          .fa.fa-picture-o{ aria: { hidden: "true"}}
          = f.file_field :image, class: 'main__footer-mask-hidden'
      = f.submit "Send", class: 'button'
